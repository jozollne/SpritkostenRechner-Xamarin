<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/ergHint"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_below="@id/textView1"
        android:inputType="numberDecimal|text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/durchVerbauch"
        android:hint="@string/durchVerbauchHint"/>   
    <com.google.android.material.textfield.TextInputEditText
        android:layout_below="@id/durchVerbauch"
        android:inputType="numberDecimal|text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/strecke"
        android:hint="@string/streckeHint"/>   
    <com.google.android.material.textfield.TextInputEditText
        android:layout_below="@id/strecke"
        android:inputType="numberDecimal|text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spritKosten"
        android:hint="@string/sprtiKostenHint"/>   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/spritKosten">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/berechnenButton"
            android:text="@string/button_text"/>
    </LinearLayout>
</RelativeLayout>